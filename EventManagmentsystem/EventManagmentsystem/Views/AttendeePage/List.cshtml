@model IEnumerable<EventManagmentsystem.Models.AttendeeDto>
@{
    ViewData["Title"] = "List";
}

<h1>Attendee</h1>

<p>
    <a asp-action="New">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().AttendeeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AttendeeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AttendeeId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.AttendeeId">Details</a> |
                    <a asp-action="ConfirmDelete" asp-route-id="@item.AttendeeId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
